{% extends 'layout/layout_admin.html.twig' %}

{% block title %}{{ parent() }} - Modification d'un article{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('articles') }}
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-content">
            <h1 class="card-title mb-10">Informations générales</h1>
            {{ form_start(form) }}
                {{ form_rest(form) }}
                <div class="d-flex align-items-center">
                    <button class="btn btn-small btn-primary mr-10">Modifier l'article</button>
                    <a href="{{ path('admin_article') }}" class="btn btn-small btn-border">Retour</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}


