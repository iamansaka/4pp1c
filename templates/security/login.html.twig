{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('auth') }}
{% endblock %}


{% block body %}
    <div class="container-auth">
        <h1 class="page-title">Connexion</h1>
        {% if error %}
            <div class="error-noti">
                {{ error.messageKey | trans(error.messageData, 'sucurity') }}
            </div>
        {% endif %}

        <form action="{{ path('admin_login') }}" method='post' class="login-form form-auth">
            <div class="form-row mb-5">
                <label for="email">Email</label>
                <input type="text" name="email" class="input-element" id="email" autofocus value="{{ username }}" placeholder="Email">
            </div>
            <div class="form-row mb-5">
                <label for="password">Mot de passe</label>
                <input type="password"  class="input-element" name="password" id="password" placeholder="Mot de passe">
            </div>
            <div class="form-check flex-fill mb-10" style="width: 100%">
                <input type="checkbox" class="form-check-input" name="_remember_me" id="remember_me">
                <label for="remember_me">Se souvenir de moi</label>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button class="send-btn btn" type="submit">Connexion</button>
            {# <div class="form-auth-link-holder">
                Vous n'avez pas encore de compte ?
                <a href="{{ path('admin_signup') }}">S'inscrire</a>
            </div> #}
        </form>
    </div>
{% endblock %}
